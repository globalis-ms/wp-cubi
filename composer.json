{
    "name": "globalis/wp-cubi",
    "description": "WordPress modern stack for developers",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/globalis-ms/wp-cubi",
    "authors": [
        {
            "name": "Pierre Dargham",
            "homepage": "https://github.com/pierre-dargham/"
        },
        {
            "name": "GLOBALIS media systems",
            "homepage": "https://www.globalis-ms.com/"
        }
    ],
    "keywords": [
        "wp-cubi", "globalis", "wordpress", "stack", "composer", "robo", "wp"
    ],
    "support": {
        "issues": "https://github.com/globalis-ms/wp-cubi/issues"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "path",
            "url": "./repositories/wp-unhooked"
        }
    ],
    "require": {
        "php": ">=8.0 <8.2",
        "composer/installers": "^2.1.1",
        "roots/wordpress": "6.1.1",
        "consolidation/robo": "^3.0.11",
        "globalis/wp-cli-bin" : "^2.7.1",
        "globalis/wp-cubi-helpers": "^1.0.4",
        "globalis/wp-cubi-imagemin": "^1.3.1",
        "johnbillion/extended-cpts": "^5.0.3",
        "roots/soil": "^4.1.1",
        "roots/wp-password-bcrypt": "^1.1.0",
        "inpsyde/wonolog": "^2.x-dev",
        "wpackagist-plugin/query-monitor": "^3.11.1",
        "wpackagist-plugin/wp-crontrol": "^1.15.1",
        "wpackagist-plugin/user-switching": "^1.7.0",
        "wpackagist-plugin/autodescription": "^4.2.7.1",
        "wpackagist-plugin/limit-login-attempts-reloaded": "^2.25.10",
        "wpackagist-plugin/dynamo": "^1.1",
        "globalis/wp-unhooked": "*@dev"
    },
    "require-dev": {
        "globalis/wp-cubi-robo" : "^2.0.7",
        "squizlabs/php_codesniffer": "^3.7.1"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-modules/{$name}/": ["type:wordpress-muplugin"],
            "web/app/modules/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wpcb"
    },
    "suggest": {
        "globalis/wp-cubi-robo-globalis": "Provides a BuildAssets trait for RoboFile"
    },
    "scripts": {
        "post-create-project-cmd": [
            "chmod 777 log",
            "chmod 777 web/media",
            "rm -rf .resources LICENSE.md README.md"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true
        }
    }
}
